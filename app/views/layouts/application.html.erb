<!DOCTYPE html>
<html>
  <head>
    <title>Zeal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="style.css" rel="stylesheet" type="text/css" media="screen">
  </head>

  <body>
  
  <div class="heading-colorbar">
  </div>

    <!-- Static navbar -->
    <div class="navbar navbar-default navbar-static-top yamm sticky" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               <!--  <a class="navbar-brand" href="index.html"><img src="img/logo.png" alt="ASSAN"></a> -->
                <%= link_to image_tag("logo_dark.svg"), :root, :alt => "ZEAL" %>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown active ">
                    <%= link_to'職涯文章', career_posts_path %>
               <!--          <a href="#" class="dropdown-toggle" data-toggle="dropdown">職涯文章 </a>
                    </li> -->
                    <!--menu home li end here-->
                    <li class="dropdown">
                     <!--    <a href="#" class="dropdown-toggle " data-toggle="dropdown">公司文章 </a> -->
                     <%= link_to'公司文章', companies_path %>
                    </li>
                    <!--menu Portfolio li end here-->
                    <li class="dropdown">
                       <!--  <a href="#" class="dropdown-toggle" data-toggle="dropdown">關於我們</a>  -->
                      <%= link_to'關於我們', about_path %> 
                    </li>
		                <li>
										<% if current_user %>
								<!-- 		<li>
										    <%= link_to('登出', destroy_user_session_path, :method => :delete) %> 
										</li> -->
									<!-- 	<li>
										    <%= link_to('修改密碼', edit_registration_path(:user)) %>
										</li>  -->   
										<li>
										     <% if current_user && current_user.role == "admin" %>
										      <%= link_to('登入後台', admin_career_posts_path)%>
										</li>          
										     <% end %>
												<%= render "/layouts/profile_dropdown" %>
										  <% else %>
										  <li>

										<!-- 	<%= button_to '<i class="fa fa-lock"></i>註冊'.html_safe, :root, :method => :get, :class => "btn btn-default" %> -->

										    <%= link_to'<i class="fa fa-lock"></i>註冊'.html_safe, new_registration_path(:user), :class => "btn btn-default" %>
										  </li>  
										  <li>
										    <%= link_to'<i class="fa fa-user"></i>登入'.html_safe, new_session_path(:user) %>  
										  </li>    
										  <% end %>
										</li>  
                </ul>

								</div>
            </div><!--/.nav-collapse -->
        </div><!--container-->
    </div><!--navbar-default-->

		<div class="clear-fix"></div>

		<% if flash[:notice].present? %>
			<div class="alert alert-success" >
				<%= flash[:notice] %>
			</div>
		<% end %>

	  <% if flash[:alert].present? %>
	    <div class="alert alert-danger" role="alert">
	      <%= flash[:alert] %>
	    </div>
	  <% end %>
			  
	  <%= yield %>

  </body>
</html>
