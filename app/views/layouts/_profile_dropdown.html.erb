
<div class="dropdown" id="profile-dropdown">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Hi, <%= current_user.short_name %>
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
    <li><%= link_to "收藏的公司",fav_companies_path %></li>
    <li><%= link_to "收藏的職缺",fav_jobs_path %></li>
    <li><%= link_to "投遞的職缺" %></li>
    <li><%= link_to "瀏覽紀錄 #{badge(@view_history.show.count)}".html_safe , viewed_history_path %></li>
    <% if current_user && current_user.hr?(current_user) %>
      <li role="separator" class="divider"></li>
      <li><%= link_to "人資後台", hr_sys_index_path %></li>
    <% end %>
    <li role="separator" class="divider"></li>
    <li><%= link_to "我的履歷", my_resume_path %></li>
    <li><%= link_to "設定", edit_registration_path(:user) %></li>
    <li><%= link_to "登出", destroy_user_session_path, :method => :delete %></li>
  </ul>
</div>

