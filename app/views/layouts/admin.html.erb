<!DOCTYPE html>
<html>
  <head>
    <title>Zeal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

		<div class="header">
			<div class="container">
				<div class="pull-left">
					<div class="logo">
					<%= link_to image_tag("Zeal_logo.png"), :root %>
					</div>
					<div class="admin-font">
						<%= link_to "Zeal後台管理系統", admin_companies_path %>
					</div>
				</div>
				<div class="pull-right">
					<%= link_to('職涯文章', admin_career_posts_path, :class => "btn btn-primary" ) %>
					<%= link_to('公司文章', admin_companies_path, :class => "btn btn-primary" ) %>
			    <%= link_to('登出', destroy_user_session_path, :method => :delete) %> |
			    <%= link_to('修改密碼', edit_registration_path(:user)) %>
				</div>
			</div>	
		</div>

		<div class="clear-fix"></div>

		<% if flash[:notice].present? %>
			<div class="alert alert-success" >
				<%= flash[:notice] %>
			</div>
		<% end %>

	  <% if flash[:alert].present? %>
	    <div class="alert alert-danger" role="alert">
	      <%= flash[:alert] %>
	    </div>
	  <% end %>
		
	  
	  <%= yield %>
	  
		
		<footer>
		<%= link_to "See all firms" %>
		</footer>
  </body>
</html>
